<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="42.0" prefWidth="492.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.components.sheetManager.parts.top.updates.SheetUpdatesController">
    <children>
        <!-- Label להצגת ההודעה על גרסה לא עדכנית -->
        <Label fx:id="messageLabel" layoutX="20.0" layoutY="20.0" prefHeight="4.0" prefWidth="472.0" wrapText="true" />

        <!-- כפתור לרענון הגיליון -->
        <Button fx:id="refreshButton" layoutX="20.0" layoutY="50.0" onAction="#handleRefreshButtonClick" text="Refresh Sheet" />
    </children>
</AnchorPane>
