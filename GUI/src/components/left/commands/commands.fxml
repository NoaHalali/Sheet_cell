<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" style="-fx-background-color: #5a9ad3;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.left.commands.CommandsController">
    <!-- כפתור להגדרת רוחב עמודות/שורות -->
    <HBox alignment="CENTER_LEFT" spacing="5">
        <Button fx:id="setColumnRowWidthButton" onAction="#setColumnRowWidthAction" text="Set Column/Row Width" />
        <TextField fx:id="columnRowWidthTextField" promptText="Enter width" />
    </HBox>

    <!-- יישור התוכן בעמודה -->
    <HBox alignment="CENTER_LEFT" spacing="5">
        <Button fx:id="setColumnAlignmentButton" onAction="#setColumnAlignmentAction" text="Set Column Alignment" />
        <TextField fx:id="columnAlignmentTextField" promptText="Enter alignment" />
    </HBox>

    <!-- שינוי צבע טקסט וצבע גבול -->
    <HBox alignment="CENTER_LEFT" minHeight="40.0" spacing="10.0">
        <Label minHeight="30.0" prefHeight="30.0" prefWidth="141.0" text="Cell Text Color:" textFill="WHITE">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <ColorPicker fx:id="textColorPicker" minHeight="30.0" />
    </HBox>

    <HBox alignment="CENTER_LEFT" minHeight="40.0" spacing="10.0">
        <Label minHeight="30.0" prefHeight="30.0" prefWidth="143.0" text="Cell Background Color:" textFill="WHITE">
            <font>
                <Font size="13.0" />
            </font>
        </Label>
        <ColorPicker fx:id="backgroundColorPicker" minHeight="30.0" />
    </HBox>

    <!-- ביטול עיצוב תא מסוים -->
    <Button fx:id="resetCellStyleButton" onAction="#resetCellStyleAction" text="Reset Cell Style" />
</VBox>
